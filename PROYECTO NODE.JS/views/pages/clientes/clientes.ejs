<!--=========================***CONTENIDO***================================-->

<div class="container my-5 contenedorCentrado">
    <div class="row ">
        <table id="example" class="table table-striped contenedorCentrado" style="width:100%">
            <caption>
                Tabla Clientes
            </caption>
            <thead class="texto-centrado">
                <tr>
        
                    <th scope="col">nombre Completo</th>
                    <th scope="col">telefono</th>
                    <th scope="col">direccion</th>
                    <th scope="col">habilitado</th>
                    <th scope="col">Accion</th>
        
                </tr>
            </thead>
            <tbody>
        
                <% if (clientes.length > 0) { %>
                    <% clientes.forEach(clientes => { %>
                        <tr>
                            <td><%= clientes.nombreCompleto %></td>      
                            <td><%= clientes.telefono %></td> 
                            <td><%= clientes.direccion %></td> 
                            <td><%= clientes.habilitado %></td>     
                            <td class="btn-formularios">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detalleCliente"
                                data-id="<%= clientes._id %>">
                                <i class="fa-solid fa-eye"></i>
                            </button>                               
                             <a href="" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                                <a href="" class="btn btn-primary"><i class="fa-solid fa-eye"></i></a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            
            </tbody>
        </table>
    </div>
</div>

